/dts-v1/;
#include "bcm2711-rpi-cm4.dtsi"
#include "bcm283x-rpi-usb-host.dtsi"

/ {
	model = "Mapio Board";

	aliases {
		i2c5 = &i2c5;
		serial4 = &uart4;
		serial5 = &uart5;
		};

	leds {
		led-act {
			gpios = <&gpio 42 GPIO_ACTIVE_HIGH>;
		};

		led-pwr {
			label = "PWR";
			gpios = <&expgpio 2 GPIO_ACTIVE_LOW>;
			default-state = "keep";
			linux,default-trigger = "default-on";
		};
	};

	fan0: gpio-fan@0 {
		compatible = "gpio-fan";
		gpios = <&gpio 23 0>;
		gpio-fan,speed-map = <0    0>, <5000 1>;
		#cooling-cells = <2>;
	};
};

&ddc0 {
	status = "okay";
};

&ddc1 {
	status = "okay";
};

&gpio {
	/*
	 * Parts taken from rpi_SCH_4b_4p0_reduced.pdf and
	 * the official GPU firmware DT blob.
	 *
	 * Legend:
	 * "FOO" = GPIO line named "FOO" on the schematic
	 * "FOO_N" = GPIO line named "FOO" on schematic, active low
	 */
	gpio-line-names = "ID_SDA",
			  "ID_SCL",
			  "GPIO2",
			  "GPIO3",
			  "TXD3",
			  "GPIO5",
			  "GPIO6",
			  "GPIO7",
			  "RS485_TX",
			  "RS485_RX",
			  "SDA5",
			  "SCL5",
			  "TXD5",
			  "RXD5",
			  /* Serial port */
			  "TXD1",
			  "RXD1",
			  "GPIO16",
			  "GPIO17",
			  "GPIO18",
			  "SPI6_MISO",
			  "SPI6_MOSI",
			  "SPI6_SCLK",
			  "GPIO22",
			  "FAN_PWM",
			  "RELAY2_CTRL",
			  "RELAY1_CTRL",
			  "GPIO26",
			  "GPIO27",
			  "RGMII_MDIO",
			  "RGMIO_MDC",
			  /* Used by BT module */
			  "CTS0",
			  "RTS0",
			  "TXD0",
			  "RXD0",
			  /* Used by Wifi */
			  "SD1_CLK",
			  "SD1_CMD",
			  "SD1_DATA0",
			  "SD1_DATA1",
			  "SD1_DATA2",
			  "SD1_DATA3",
			  /* Shared with SPI flash */
			  "PWM0_MISO",
			  "PWM1_MOSI",
			  "STATUS_LED_G_CLK",
			  "SPIFLASH_CE_N",
			  "SDA0",
			  "SCL0",
			  "RGMII_RXCLK",
			  "RGMII_RXCTL",
			  "RGMII_RXD0",
			  "RGMII_RXD1",
			  "RGMII_RXD2",
			  "RGMII_RXD3",
			  "RGMII_TXCLK",
			  "RGMII_TXCTL",
			  "RGMII_TXD0",
			  "RGMII_TXD1",
			  "RGMII_TXD2",
			  "RGMII_TXD3";
	spi6_pins: spi6_pins {
            brcm,pins = <0x13 0x14 0x15>;
            brcm,function = <BCM2835_FSEL_ALT3>;
	};
    
    spi6_cs_pins: spi6_cs_pins {
            brcm,pins = <0x2>;
            brcm,function = <BCM2835_FSEL_GPIO_OUT>;
	};

};

&hdmi0 {
	status = "disabled";
};

&hdmi1 {
	status = "disabled";
};

&genet {
	status = "okay";
};

&pixelvalve0 {
	status = "disabled";
};

&pixelvalve1 {
	status = "disabled";
};

&pixelvalve2 {
	status = "disabled";
};

&pixelvalve4 {
	status = "disabled";
};

&vc4 {
	status = "disabled";
};

&vec {
	status = "disabled";
};

&spi6 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi6_pins &spi6_cs_pins>;
    cs-gpios = <&gpio 2 1>;

	status = "okay";

	spidev0: spidev@0{
                 compatible = "lwn,bk4";
                 reg = <0>;      /* CE0 */
                 #address-cells = <1>;
                 #size-cells = <0>;
                 spi-max-frequency = <4000000>;
             };
};

&cpu_thermal {
	trips {
		cpu_hot: trip-point@0 {
			temperature = <55000>;	/* (millicelsius) Fan started at 55°C */
			hysteresis = <10000>;	/* (millicelsius) Fan stopped at 45°C */
			type = "active";
			};
		};
	cooling-maps {
		map0 {
			trip = <&cpu_hot>;
			cooling-device = <&fan0 1 1>;
			};
		};
};

&uart4 {
        pinctrl-names = "default";
        pinctrl-0 = <&uart4_gpio8>;
        status = "okay";
};

&uart5 {
        pinctrl-names = "default";
        pinctrl-0 = <&uart5_gpio12>;
        status = "okay";
};

&ddc0 {
	status = "disabled";
};

&ddc1 {
	status = "disabled";
};

&i2c0 {
	status = "disabled";
};

&i2c1 {
	status = "disabled";
};

&i2c3 {
	status = "disabled";
};

&i2c4 {
	status = "disabled";
};

&i2c6 {
	status = "disabled";
};


&i2c5 {
        pinctrl-names = "default";
        pinctrl-0 = <&i2c5_gpio10>;
        status = "okay";
        clock-frequency = <100000>;
};